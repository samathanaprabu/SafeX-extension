{
    "manifest_version": 3,
    "name": "SafeX",
    "version": "1.0",
    "description": "Scan email attachments for phishing threats.",
    "permissions": ["activeTab", "storage"],
    "action": {
      "default_popup": "safex.html",
      "default_icon": {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
      }
    },
    "icons": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "browser_action": {
      "default_popup": "safex.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }  